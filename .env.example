# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/feedia

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# CORS Origin (for production, set to your frontend URL)
CORS_ORIGIN=http://localhost:3000

# Gmail credentials for email notifications (optional)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Google Maps API Key (for frontend)
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# API URL for frontend (for production)
REACT_APP_API_URL=http://localhost:5000
